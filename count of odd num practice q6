import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int count=0;
        int arr[] = new int[n];
        for(int i=0;i<n;i++){
        arr[i]=s.nextInt();
        }
        for(int i= 0;i<n;i++){
            if(arr[i]%2==1)
            count++;
            
        }
        System.out.print(count);
    }
        
}
